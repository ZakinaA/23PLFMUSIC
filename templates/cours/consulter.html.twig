{% extends 'base.html.twig' %}
{% block title %}Consulter un cours!{% endblock %}
{% block stylesheets %}{% endblock %}
{% block header %}Mon superbe menu{% endblock %}
{% block body %}
<div class ="col-sm-12 col-xl-6 ">
    <div  class="container-fluid pt-4 px-4">
        <div class =" bg-secondary rounded h-100 p-4">
    <h6 class="mb-4">PAGE DE CONSULTATION D'UN COURS</h6>

    <table class="table table-borderless">

        <tr><td>Libelle : {{cours.libelle}}</td>

        <tr><td>Instrument appris :{{cours.typeInstrument.libelle}}</td>

        <tr><td>Nom du professeur : {{cours.professeur.nom}}</td></tr>

        <tr><td>Prenom du professeur : {{cours.professeur.prenom}}</td></tr>

        <tr><td>Jour : {{ cours.jour.libelle }}</td></tr>

        <tr><td>Heure début : {{ cours.heureDebut|date("h:i") }}</td></tr>

        <tr><td>Heure fin : {{ cours.heureFin|date("h:i") }}</td></tr>
    </table>

    <h6 class="mb-4">ÉLÈVES INSCRITS </h6>
    <ul>
        {% for inscription in cours.inscriptions %}
            <li>{{ inscription.eleve.nom }} {{ inscription.eleve.prenom }}</li>
        {% endfor %}
    </ul>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}{% endblock %}