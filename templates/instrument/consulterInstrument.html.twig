{% extends 'base.html.twig' %}
{% block title %}Consulter un cours!{% endblock %}
{% block stylesheets %}{% endblock %}
{% block header %}Mon superbe menu{% endblock %}
{% block body %}
<div class ="col-sm-12 col-xl-6 ">
    <div  class="container-fluid pt-4 px-4">
        <div class =" bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">PAGE DE CONSULTATION D'UN INSTRUMENT</h6>

            <table class="table table-borderless">


    <tr><td>Id : </td><td>{{instruments.id}} </td></tr>
    <tr><td>Nom : </td><td>{{instruments.nom}} </td></tr>
    <tr><td>N°Serie : </td><td>{{instruments.numSerie}} </td></tr>

    <tr><td>Prix d'achat : </td><td>{{instruments.prixAchat}}€ </td> </tr>
    <tr><td>Utilisation : </td><td>{{instruments.utilisation}} </td> </tr>
    <tr><td>Marque : </td><td>{{instruments.marque.libelle}} </td> </tr>
    <tr><td>Type : </td><td>{{instruments.typeInstrument.libelle}} </td> </tr>
    <tr><td>Couleur(s) : </td>
        <td>
            <ul>
                {% for couleur in instruments.couleur %}
                <li>{{ couleur.nom }} </li>
                {% endfor %}
            </ul>
        </td>

    </tr>

    <td>
            <form method="post" action="{{ path('instrumentModifier', {'id': instruments.id}) }}">
                <button type="submit">Modifier</button>


            </form>


    </td>
            </table>
        </div>
    </div>
</div>

            {% endblock %}
            {% block javascripts %}{% endblock %}

